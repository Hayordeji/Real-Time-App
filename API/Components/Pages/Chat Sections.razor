@page "/chatsections"

<PageTitle>Chat Sections</PageTitle>

    <div class="app-container">
        <div class="glass-card glass-card-primary text-center">
            <div class="page-title">Select a chat room!</div>
        </div>
        <div class="content-area">
            <div class="glass-card flex flex-col gap-lg">
                <a href="/chat">
                    <button class="btn btn-primary w-full">Private Chat</button>
                </a>
                <a href="/chat/group/a">
                    <button class="btn btn-secondary w-full">Group A</button>
                </a>
                <a href="/chat/group/b">
                    <button class="btn btn-outline w-full">Group B</button>
                </a>
            </div>
        </div>
    </div>